<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>com.jairoguo</groupId>
    <artifactId>namjagbarwa</artifactId>
    <packaging>pom</packaging>
    <version>1.0-SNAPSHOT</version>
    <modules>
        <module>infra</module>
        <module>modules</module>
    </modules>

    <properties>
        <maven.compiler.source>17</maven.compiler.source>
        <maven.compiler.target>17</maven.compiler.target>

        <!-- 一方库 -->
        <infra.version>1.0-SNAPSHOT</infra.version>

        <!-- 三方库 -->
        <spring-boot.version>2.6.8</spring-boot.version>
        <mybatis-plus.version>3.5.1</mybatis-plus.version>
        <shardingsphere.version>5.1.1</shardingsphere.version>
        <druid.version>1.2.8</druid.version>

        <hutool.version>5.7.20</hutool.version>
        <lombok.version>1.18.16</lombok.version>
        <mapstruct.version>1.5.0.RC1</mapstruct.version>


        <!-- 测试 -->

        <junit.version>5.8.2</junit.version>
    </properties>

    <dependencyManagement>
        <dependencies>

            <!-- 一方库 =================================================== -->
            <dependency>
                <groupId>com.jairoguo</groupId>
                <artifactId>common</artifactId>
                <version>${infra.version}</version>
            </dependency>

            <dependency>
                <groupId>com.jairoguo</groupId>
                <artifactId>exception</artifactId>
                <version>${infra.version}</version>
            </dependency>

            <dependency>
                <groupId>com.jairoguo</groupId>
                <artifactId>handler</artifactId>
                <version>${infra.version}</version>
            </dependency>

            <dependency>
                <groupId>com.jairoguo</groupId>
                <artifactId>database-core</artifactId>
                <version>${infra.version}</version>
            </dependency>

            <dependency>
                <groupId>com.jairoguo</groupId>
                <artifactId>validated-core</artifactId>
                <version>${infra.version}</version>
            </dependency>

            <!-- 三方库 =================================================== -->
            <dependency>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-dependencies</artifactId>
                <version>${spring-boot.version}</version>
                <type>pom</type>
                <scope>import</scope>
            </dependency>

            <dependency>
                <groupId>com.baomidou</groupId>
                <artifactId>mybatis-plus-core</artifactId>
                <version>${mybatis-plus.version}</version>
            </dependency>

            <dependency>
                <groupId>com.baomidou</groupId>
                <artifactId>mybatis-plus-boot-starter</artifactId>
                <version>${mybatis-plus.version}</version>
            </dependency>

            <dependency>
                <groupId>org.apache.shardingsphere</groupId>
                <artifactId>shardingsphere-jdbc-core-spring-boot-starter</artifactId>
                <version>${shardingsphere.version}</version>
            </dependency>

            <dependency>
                <groupId>com.alibaba</groupId>
                <artifactId>druid</artifactId>
                <version>${druid.version}</version>
            </dependency>

            <dependency>
                <groupId>cn.hutool</groupId>
                <artifactId>hutool-bom</artifactId>
                <version>${hutool.version}</version>
                <type>pom</type>
                <!-- 注意这里是import -->
                <scope>import</scope>
            </dependency>

            <dependency>
                <groupId>org.mapstruct</groupId>
                <artifactId>mapstruct</artifactId>
                <version>${mapstruct.version}</version>
            </dependency>

            <dependency>
                <groupId>org.mapstruct</groupId>
                <artifactId>mapstruct-processor</artifactId>
                <version>${mapstruct.version}</version>
            </dependency>

            <!-- 测试依赖 =================================================== -->

            <dependency>
                <groupId>org.junit.jupiter</groupId>
                <artifactId>junit-jupiter-api</artifactId>
                <version>${junit.version}</version>
                <scope>test</scope>
            </dependency>
        </dependencies>
    </dependencyManagement>

    <build>
        <plugins>
            <plugin>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-maven-plugin</artifactId>
                <version>${spring-boot.version}</version>
            </plugin>
        </plugins>
    </build>

    <repositories>
        <repository>
            <id>huawei</id>
            <name>huawei</name>
            <url>https://mirrors.huaweicloud.com/repository/maven/</url>
        </repository>
        <repository>
            <id>official</id>
            <name>official</name>
            <url>https://repo.maven.apache.org/maven2</url>
        </repository>
    </repositories>
</project>